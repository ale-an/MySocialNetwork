@model BusinessLayer.Models.MainPageViewModel

@{
    ViewData["Title"] = "Главная";
}

<div class="row">
    <div class="side">
        <span>Зарегистрируйтесь в нашей соцсети! ПОЖАЛУЙСТА!</span>
        <img class="main-img please" src="/img/smile.png" alt="img"/>
    </div>


    <div class="main">
        <div class="card login-area">
            <h4 class="text-center">Добро пожаловать!</h4>
            <form method="post" asp-controller="Login" asp-action="Login" class="needs-validation">
                <div class="form-group">
                    <input name="Email" type="email" class="form-control" placeholder="Введите email"/>
                </div>
                <div class="form-group">
                    <input name="Password" type="password" class="form-control" placeholder="Введите пароль"/>
                </div>
                <div>
                    <input type="submit" value="Войти" class="btn btn-primary full-width-button"/>
                </div>
            </form>
        </div>
        <div class="card login-area">
            <h4 class="text-center">Впервые с нами?</h4>
            <h6 class="text-center color-gray">Регистрация нового пользователя</h6>
            <form method="post" asp-controller="Registration" asp-action="FirstRegistration">
                <div class="form-group">
                    <input name="FirstName" type="text" class="form-control" placeholder="Введите имя"/>

                </div>
                <div class="form-group">
                    <input name="LastName" type="text" class="form-control" placeholder="Введите фамилию"/>
                </div>
                <div>
                    <div class="form-group">
                        <input name="Birthday" type="date" class="form-control" placeholder="Введите фамилию"/>
                    </div>
                </div>
                <div>
                    <input type="submit" value="Продолжить регистрацию" class="btn btn-success full-width-button"/>
                </div>
            </form>
        </div>
    </div>

</div>