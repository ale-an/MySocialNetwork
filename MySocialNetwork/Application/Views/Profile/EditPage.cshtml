@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BusinessLayer.Models.UserEditViewModel

<div class="registration-form">
    <h4 class="text-center">Редактирование профиля</h4>
    <form method="post" asp-controller="Profile" asp-action="Edit">
        <div class="form-group">
            <input value="@Model.FirstName" name="FirstName" type="text" class="form-control" placeholder="Имя"/>
        </div>
        <div class="form-group">
            <input value="@Model.LastName" name="LastName" type="text" class="form-control" placeholder="Фамилия"/>
        </div>
        <div class="form-group">
            <input value="@Model.MiddleName" name="MiddleName" type="text" class="form-control" placeholder="Отчество"/>
        </div>
        <div class="form-group">
            <input value="@Model.Email" name="Email" type="email" class="form-control" placeholder="Электронная почта"/>
        </div>
        <div class="form-group">
            <input value="@Model.BirthDate.ToString("yyyy-MM-dd")" name="BirthDate" type="date" class="form-control" placeholder="Дата рождения"/>
        </div>
        <div class="form-group">
            <input value="@Model.Photo" name="Photo" type="text" class="form-control" placeholder="Ссылка на фото"/>
        </div>
        <div class="form-group">
            <input value="@Model.Status" name="Status" type="text" class="form-control" placeholder="Статус"/>
        </div>
        <div class="form-group">
            <input value="@Model.AboutMe" name="AboutMe" type="text" class="form-control" placeholder="Обо мне"/>
        </div>
        <div>
            <input type="submit" value="Сохранить" class="btn btn-success"/>
        </div>
    </form>
</div>